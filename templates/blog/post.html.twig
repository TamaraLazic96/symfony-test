{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock title %}

{% block body %}
    <p>ID {{ id }}</p>
    <h3>{{ post.title| upper }}</h3>
    {# | upper ,  #}
    <p>{{ post.text }}</p>
    <p>{{ post.date|date('H:i:s') }}</p>
    {{ 560|price }}
    <p>Here is the current locale {{ locale }}</p>
    <p>{{ message }}</p>

    {# Can be finde in app varible class #}
    <h2>Some of the vars that are alwys avalible</h2>
    <p>Env: {{ app.environment }}</p>
    <p>User: {{ app.user }}</p>
    <p>Request: {{ app.request }}</p>
    <p>Session started: {{ app.session.isStarted() }}</p>
    <p>Is Debug mode on: {{ app.debug }}</p>
{% endblock body %}